<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="una.ac.cr.git">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FormUsuario" />
        <activity android:name=".PerfilUsuario" />
        <activity android:name=".HistorialTomas" />
        <activity android:name=".TipsSalud" />
        <activity android:name=".NumEmergencias" />
        <activity android:name=".Acerca"></activity>
    </application>

    <!--PERMISOS PARA VERSION NUEVA DE ANDROID Y LA VIEJA -->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>

    <!--PARA VERSIONES VIEJAS DE ANDROID -->

    <uses-feature android:name="android.hardware.location.gps"/>

</manifest>